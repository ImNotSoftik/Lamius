Helps to hide minecarts in mineshafts and reduce the server load

diff --git a/src/main/java/me/core/lamius/Lamius/LamiusConfig.java b/src/main/java/me/core/lamius/Lamius/LamiusConfig.java
index 31e46554ef0c33785c17acb43a1a157ff72d8583..93242e3c96bb130958b5e19388593b3cef2d3984 100644
--- a/src/main/java/me/core/lamius/Lamius/LamiusConfig.java
+++ b/src/main/java/me/core/lamius/Lamius/LamiusConfig.java
@@ -264,4 +264,9 @@ public class LamiusConfig {
     private static void pingPeriod() {
         pingPeriod = MathHelper.clamp(getInt("ping-period", 15), 1, 30) * 1000L;
     }
+
+    public static boolean entityTrackerCheckY;
+    private static void entityTrackerCheckY() {
+        entityTrackerCheckY = getBoolean("entity-tracker-check-y", false);
+    }
 }
diff --git a/src/main/java/net/minecraft/server/EntityTrackerEntry.java b/src/main/java/net/minecraft/server/EntityTrackerEntry.java
index 8f3fd88f52494bd4e949f209735dae20ca032957..efdee67c973fbe12abaace1902eaa710d5a5c15a 100644
--- a/src/main/java/net/minecraft/server/EntityTrackerEntry.java
+++ b/src/main/java/net/minecraft/server/EntityTrackerEntry.java
@@ -511,6 +511,13 @@ public class EntityTrackerEntry {
         // Lamius end
         int i = Math.min(this.e, me.core.lamius.Lamius.LamiusConfig.dynamicViewDistance ? entityplayer.getFurthestViewableBlock() : this.f); // Lamius - Dynamic view distance
 
+        // Lamius start
+        if (me.core.lamius.Lamius.LamiusConfig.entityTrackerCheckY) {
+            double y0 = entityplayer.locY - this.tracker.locY;
+            if (y0 < -i || y0 > i) {
+                return false;
+            }
+        } // Lamius end
         return d0 >= (double) (-i) && d0 <= (double) i && d1 >= (double) (-i) && d1 <= (double) i && this.tracker.a(entityplayer)
                 && (!me.core.lamius.Lamius.LamiusConfig.delayedChunksEnabled || !entityplayer.getDelayedChunks().contains(new ChunkCoordIntPair(this.tracker.ab, this.tracker.ad))); // Lamius - Delayed chunks
     }
